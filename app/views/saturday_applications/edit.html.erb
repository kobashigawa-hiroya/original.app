<div class="container">
  <div class="container border p-3 my-5">
    <h1>土曜申請編集</h1>
    <%= form_with model: @saturday_applications, local: true do |form|  %>
      <div>
        <%= form.label :title, "日付" %>
        <div class="form-row">
          <div class="col-5">
            <%= form.text_field :date, class: "form-control", id: "saturday_application-edit-date" %>
          </div>
          <div class="col">
            <%= form.text_field :start_time, class:"form-control saturday-start" %>
          </div>
          <div class="d-flex align-items-center">〜</div>
          <div class="col"><%= form.text_field :end_time, class:"form-control saturday-end" %>
          </div>
        </div>
        <hr>
        <div class="form-group">
          <%= form.label :title, "理由" %>
          <%= form.select :title, @saturday_application_list, {}, class: "custom-select" %>
        </div>
        <div>
          <%= form.submit "投稿する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
