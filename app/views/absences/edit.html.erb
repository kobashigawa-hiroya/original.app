<div class="container border p-3 my-5">
  <h1>欠席届け編集フォーム</h1>
  <%= form_with model: @absence, local: true do |form| %>
    <div class="field">
      <%= form.label :date , "日付"%>
    </div>
    <%= form.text_field :date, id: "absence-edit-date", value: @absence.date %>
    <div class="field">
      <%= form.label :title ,"理由"%>
      <%= form.select :title, @absence_list, {}, class: "custom-select" %>
    </div>
    <div class="field">
      <%= form.label :content,"症状" %>
      <%= form.rich_text_area :content %>
    </div>
    <div class="form-group">
      <%= form.file_field :image %>
    </div>
    <div>
      <%= form.submit "送信" %>
    </div>
  <% end %>
</div>
