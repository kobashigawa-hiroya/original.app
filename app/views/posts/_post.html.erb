<div class="col-sm-6 col-lg-4 border-white" style="height: 400px";>
  <div class="card" style="height: 400px";>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
      <a class="navbar-brand" href="#">やんばる保育園</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <%= link_to "投稿一覧", posts_path, class: 'navbar-brand' %>
          </li>
          <li class="nav-item active">
            <%= link_to 'ログアウト', destroy_app_session_path, method: :delete, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "投稿", root_path, class: 'navbar-brand' %>
          </li>
          <li class="nav-item active">
            <%= button_to "登園", welcomtimes_path, name: 'garden', class:"navbar-brand", method: :post %>
          </li>
          <li class="nav-item active">
            <%= button_to "降園", welcomtimes_path, name: 'garden', class:"navbar-brand", method: :post %>
          </li>
        </ul>
      </div>
    </nav>
    <%= image_tag post.image_url(:thumb) %>
    <h3 class="card-title"style="height: 400px";>タイトル
      <p><%= post.title %></p>
    </h3>
    <h3 class="card-text">
      <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#post-details-modal-<%= post.id %>">
        投稿
      </button>
    </h3>
  </div>
</div>
<div class="modal fade" id="post-details-modal-<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="post-modal-title-<%= post.id %>" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="post-modal-title-<%= post.id %>"> title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p> <%= post.content %></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <p><%= link_to "編集", edit_post_path(post),class:"btn btn-dark" %>
          <%= link_to "削除", post_path(post),class:"btn btn-warning" ,method: :delete, data: { confirm: "削除しますか？"} %></p>
      </div>
    </div>
  </div>
</div>
