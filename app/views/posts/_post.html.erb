<div class="col-sm-6 col-lg-4 border-white" style="height: 400px";>
  <div class="card" style="height: 400px";>
    <%= image_tag post.image_url(:thumb) %>
    <h3 class="card-title text-center"style="height: 400px";>タイトル
      <p><%= post.title %></p>
    </h3>
    <h3 class="card-text">
      <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#post-details-modal-<%= post.id %>">
        <i class="fas fa-highlighter"></i> 保育園での様子
      </button>
    </h3>
  </div>
</div>
<div class="modal fade" id="post-details-modal-<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="post-modal-title-<%= post.id %>" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="post-modal-title-<%= post.id %>"> 👶🍼</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p> <%= post.content %></p>
        <% if post.letter.present? %>
          <p> <%= post.letter.body_temperature %></p>
          <p> <%= post.letter.content %></p>
        <% end %>
      </div>
      <p>
        <div class="dropdown">
          <p>
            <div class="text-center">
              <button class="btn btn-primary " type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                返信
              </button>
            </div>
          </p>
          <%= render 'letters/letter', post: post %>
        </div>
      </p>
    </div>
  </div>
</div>
